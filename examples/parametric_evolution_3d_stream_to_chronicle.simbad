chronicler
{
  key_attribute position
  
  nonkey_attributes
  {
    "" mutation.id
    "" birth.efficiency
    "" birth.resistance
    "" lifespan.efficiency
    "" lifespan.resistance
    "" success.efficiency
    "" success.resistance
  }
  
  printer
  {
    class "csv_printer"
    parameters
    {
      delimiter ";"
      file STDOUT
    }
  }
}

initial_configuration
{
  class "cubic_crystal"
  parameters
  {
    dimension 3
    radius 2
    spacing 1
  }
  default_attributes
  {
    birth
    {
      efficiency 0.1
      resistance 0.5
    }
    lifespan
    {
      efficiency 0.1
      resistance 0.5
    }
    success
    {
      efficiency 0.9
      resistance 0.5
    }
    mutation
    {
      id 1
      parent
      {
        id 0
      }
    }
    dummy 0.1
  }
}

reader
{
  class csv_reader
  parameters
  {
    file STDIN
    delimiter ";"
  }
}

